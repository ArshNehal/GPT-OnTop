{
    "manifest_version": 3,
    "name": "ChatGPT Sidebar",
    "description": "Adds a ChatGPT sidebar to your browser.",
    "version": "1.0",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": "icon.png"
    }
  }
  